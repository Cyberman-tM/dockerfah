{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "containerGroups_fahdocker_name": {
            "defaultValue": "foldingdocker",
            "type": "String"            
        },
        "number_of_cpus": {
            "defaultValue": "1",
            "type": "int",
            "allowedValues": [1, 2, 3, 4]
        },        
        "numFAHUnits": {
        "defaultValue": "1",
        "type": "int",
         "allowedValues": [1, 2, 4, 8, 16]
        }
        
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.ContainerInstance/containerGroups",
            "apiVersion": "2018-10-01",
            "name": "[parameters('containerGroups_fahdocker_name')]",
            "location": "eastus2",
            "properties": {
                "containers": [
                    {
                        "name": "[parameters('containerGroups_fahdocker_name')]",
                        "properties": {
                            "image": "rejutka/foldingathome_test",
                            "ports": [
                                {
                                    "protocol": "TCP",
                                    "port": 80
                                }
                            ],
                            "environmentVariables":
                            [
                                {
                                    "name": "numUnits",
                                    "value": "[parameters('numFAHUnits')]"
                                }
                            ],
                            "resources": {
                                "requests": {
                                    "memoryInGB": 0.5,
                                    "cpu": "[parameters('number_of_cpus')]"
                                }
                            }
                        }
                    }
                ],
                "restartPolicy": "Never",
                "ipAddress": {
                    "ports": [
                        {
                            "protocol": "TCP",
                            "port": 80
                        }
                    ],
                    "type": "Public"
                },
                "osType": "Linux"
            }
        }
    ]
}
